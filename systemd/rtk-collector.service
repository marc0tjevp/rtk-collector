[Unit]
Description=Rocktech Collector
After=network-online.target mosquitto.service
Wants=network-online.target

[Service]
Type=simple
EnvironmentFile=/etc/default/rtk-collector
WorkingDirectory=/opt/rtk-collector
ExecStart=/usr/bin/python3 -u -m rtk_collector.main
Restart=always
RestartSec=2
User=marco
Group=marco

[Install]
WantedBy=multi-user.target
